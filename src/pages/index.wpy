<template>
  <view class="container">
    <view wx:if="{{show_auth_userinfo}}" class="shadow_view">
      <view class="auth_tier">
        <text>点击同意刷新步数</text>
        <button open-type="getUserInfo" bindgetuserinfo="getUserInfoCb">同意</button>
      </view>
    </view>

    <view wx:if="{{show_play_desc}}" class="shadow_view">
      <view class="play_desc_img">
        <image src="../images/index/play_desc_img.png"/>
      </view>
      <icon type="cancel" color="#ffffff" size="50" class="close_shadow_icon" @tap="togglePlayDesc"></icon>
    </view>

    <view wx:if="{{show_signin}}" class="shadow_view">
      <signin @signin-emit.user="signinEmit" :isSignin.sync="is_signin"></signin>
    </view>

    <view wx:if="{{show_medal}}" class="shadow_view">
      <medal @medal-emit.user="medalEmit" :medalInfo.sync="medal_info"></medal>
    </view>

    <view wx:if="{{show_redpack_open}}" class="shadow_view">
      <view class="redpack_tier">
        <image src="../images/index/redpack_open.png" @tap="oepnRedpack"/>
      </view>
    </view>

    <view wx:if="{{show_redpack_success}}" class="shadow_view">
      <view class="redpack_tier">
        <text class="money_txt">{{red_num / 100}}元</text>
        <image src="../images/index/redpack_money.png"/>
      </view>
      <icon type="success" color="green" size="50" class="close_shadow_icon" @tap="openRedpackFocus"></icon>
    </view>

    <view wx:if="{{show_redpack_success_ercode}}" class="shadow_view">
      <view class="focus_tier">
        <image class="focus_bj" src="../images/index/medal_shadow_bj.png"/>
        <image class="focus_txt" src="../images/index/redpack_focus_txt.png"/>
        <image class="focus_ercode" src="https://bimbochinaclub.ysmine.com/Public/2018/07/common/bb_ercode.png" @tap="previewErcode"/>
      </view>
      <icon type="cancel" color="#ffffff" size="50" class="close_shadow_icon" @tap="closeRedPackFocus"></icon>
    </view>

    <view class="header">
      <view class="userinfo">
        <image class="userinfo-avatar" src="{{ user_info.avatarUrl }}"/>
        <view class="userinfo-nickname">{{ user_info.nickName }}
          <text class="userinfo-score">积分{{ user_info.score }}</text>
        </view>
      </view>
    </view>
    <view class="nav-btns">
      <view class="btn jkp" @tap="jump_jkp">
        <image src="../images/index/jkp.png"/>健康跑报名
      </view>
      <view class="btn jkp" @tap="jump_reward_game">
        <image src="../images/index/sjs.png"/>赏金赛
      </view>
      <view class="btn jkp" @tap="jump_lottery">
        <image src="../images/index/jfcj.png"/>积分抽奖
      </view>
      <view class="btn djqd">
        <image src="../images/index/djqd.png" @tap="reqSignin"/>点击签到
      </view>
    </view>
    <view class="nations {{iphonex_class}}">
      <swiper class="nation_sw" circular="true" previous-margin="30rpx" next-margin="30rpx"  display-multiple-items="3" current="{{swiper_info.current_index}}" bindchange="bindSwiperNation">
        <block wx:for="{{swiper_info.img_urls}}" wx:key="{{index}}">
          <swiper-item>
            <view class="img_item {{swiper_info.current_index != swiper_info.img_urls.length - 1 ? (index == swiper_info.current_index + 1 ? 'big' : 'mid') : (index == swiper_info.current_index + 1 - swiper_info.img_urls.length ? 'big' : 'mid')}}">
              <image src="{{item.url}}"/>
              <image class="nation_info" src="{{item.info_url}}"/>
              <image class="running_icon" src="../images/index/run_icon.png" wx:if="{{swiper_info.current_index != swiper_info.img_urls.length - 1 ? (index == swiper_info.current_index + 1) : (index == swiper_info.current_index + 1 - swiper_info.img_urls.length)}}"/>
              <!-- 蒙板锁图 -->
              <view class="lock_shadow" wx:if="{{item.km != finish_step[item.km].km}}">
                <view class="lock_icon">
                  <image src="../images/index/coin_icon.png" wx:if="{{finish_step[item.km].red}}"/>
                  <text>{{item.km}}</text>
                  <image class="lock" src="../images/index/lock.png"/>
                </view>
              </view>
              <!-- 蒙板红包图 -->
              <view class="lock_shadow" wx:if="{{finish_step[item.km].have_redpack_open}}">
                <view class="redpack_icon" data-curredpackindex="{{index}}" @tap="reqRedpack">
                  <image src="../images/index/redpack.png"/>
                </view>
              </view>
            </view>
          </swiper-item>
        </block>
      </swiper>
      <image class="arrow prev" @tap="prevNation" src="../images/index/prev.png"/>
      <image class="arrow next" @tap="nextNation" src="../images/index/next.png"/>
