<script>
  import wepy from 'wepy'
  import {nationImgs} from './nation.js'
  import Signin from '../components/signin'
  import Medal from '../components/medal'
  import {service} from './config.js'
  const stepStandard = [5, 8, 10, 30, 50, 70, 90, 110, 130, 150, 200, 300, 400, 600, 800, 1000, 1200, 1400, 1600, 1800, 2000, 2400, 3000]
  const redStandard = [5, 30, 90, 150, 400, 1000, 1600, 2000, 3000]
  export default class Index extends wepy.page {
    config = {
      navigationBarTitleText: '个人中心'
    }
    components = {
      signin: Signin,
      medal: Medal
    }
    data = {
      iphonex_class: '',
      session_key: '',
      open_id: '',
      open_id_param: {},
      run_data_param: {},

      show_auth_userinfo: false,
      show_play_desc: false,
      show_signin: false,
      is_signin: 0,
      show_medal: false,
      show_redpack_open: false,
      show_redpack_success: false,
      show_redpack_success_ercode: false,
      medal_info: {
        km: ''
      },

      user_info: {
        score: 0
      },
      big_index: 0,
      mid_index: [],
      small_index: [],
      swiper_info: {
        img_urls: nationImgs,
        current_index: 0
      },
      medal_count: 0,
      bread_count: 0,
      today_step: 0,
      total_step: 0,
      finish_step: {},
      finish_red_pack: {},
      current_redpack_nation_index: '', // 当前打开的红包属于那个国家的索引
      can_open_redpack: true,
      red_num: 0
    }
    computed = {
      medal_count_img () {
        if (!this.medal_count) {
          return '../images/index/medal_count0.png'
        } else {
          return `https://bimbochinaclub.ysmine.com/Public/2018/07/medal_count/${this.medal_count}.png`
        }
      },
      bread_count_img () {
        if (!this.bread_count) {
          return '../images/index/bread_count0.png'
        } else {
          return `https://bimbochinaclub.ysmine.com/Public/2018/07/bread_count/${this.bread_count}.png`
        }
      }
    }
    methods = {
      jump_jkp () {
        if (this.open_id) {
          this.$root.$navigate({url: `/pages/jkp/jkp?open_id=${this.open_id}`})
        } else {
          wepy.showModal({
            content: '您点击了拒绝授权，无法使用此功能。请删除小程序重新进入。',
            showCancel: false
          })
        }
      },
      jump_reward_game () {
        console.log('reward_game')
        this.$root.$navigate({url: `/pages/reward/index?open_id=${this.open_id}&score=${this.user_info.score}`})
      },
      jump_lottery () {
        console.log('lottery')
        this.$root.$navigate({url: `/pages/lottery/index?open_id=${this.open_id}&score=${this.user_info.score}`})
      },
      prevNation () {
        this.swiper_info.current_index = this.swiper_info.current_index > 0 ? this.swiper_info.current_index - 1 : this.swiper_info.img_urls.length - 1
        this.$apply()
      },
      nextNation () {
        this.swiper_info.current_index = this.swiper_info.current_index < (this.swiper_info.img_urls.length - 1) ? this.swiper_info.current_index + 1 : 0
        this.$apply()
      },
      togglePlayDesc () {
        this.show_play_desc = !this.show_play_desc
      },
      openRedpackFocus () {
        this.show_redpack_success = false
        this.show_redpack_success_ercode = true
        this.red_num = 0
      },
      closeRedPackFocus () {
        this.show_redpack_success_ercode = false
      },
      reqSignin () {
        wepy.showLoading({
          title: '加载中',
          mask: true
        })
        wepy.request({
          url: service.signIn,
          method: 'POST',
          data: {
            open_id: this.open_id
          },
          header: { 'Content-Type': 'application/x-www-form-urlencoded' }
        }).then((res) => {
          console.log('REQ_signIn res: ', res)
          wepy.hideLoading()
          if (res.data.code === '200') {
            this.is_signin = 0
            this.show_signin = true
            this.user_info.score = res.data.result.integral
            this.$apply()
          } else {
            this.is_signin = 1
            this.show_signin = true
            this.$apply()
            // wepy.showModal({
            //   content: res.data.message,
            //   showCancel: false
            // })
          }
        })
      },
      signinEmit (...args) {
        this.show_signin = false
      },
      medalEmit (...args) {
        this.show_medal = false
      },
      jumpCharity () {
        this.$root.$navigate({url: `/pages/charity/charity?bread_count=${this.bread_count}&open_id=${this.open_id}`})
      },
      reqRedpack (event) {
        const cur = event.currentTarget.dataset.curredpackindex
        if (cur === 0) {
          this.current_redpack_nation_index = nationImgs.length - 1
        } else {
          this.current_redpack_nation_index = cur - 1
        }
        this.show_redpack_open = true
      },
      oepnRedpack () {
        if (this.can_open_redpack) {
          this.can_open_redpack = false
          this.requestRedpack()
        }
      }
    }
    bindSwiperNation (e) {
      this.swiper_info.current_index = e.detail.current
    }
    getUserInfoCb (res) {
      console.log('getUserInfoCb', res)
      this.user_info = res.detail.userInfo
      this.user_info.score = 0
      this.user_rawData = res.detail.rawData
      this.user_signature = res.detail.signature
      this.show_auth_userinfo = false
      if (!this.run_data_param.encryptedData || !this.run_data_param.iv) {
        wepy.showModal({
          content: '您点击了拒绝授权，无法使用此功能。请删除小程序重新进入。',
          showCancel: false
        })
        wepy.hideLoading()
        return
      }
      this.requestRunData()
    }
    getUserRun () {
      wepy.getWeRunData().then((res) => {
        this.run_data_param.encryptedData = res.encryptedData
        this.run_data_param.iv = res.iv
        console.log('run_data_param', this.run_data_param)
        this.$apply()
      }).then((res) => {
        this.getUserSetting()
      }).catch((err) => {
        console.log(err)
        wepy.hideLoading()
        wepy.showModal({
          content: '您点击了拒绝授权，无法使用此功能。请删除小程序重新进入。',
          showCancel: false
        })
      })
    }
    requestRunData () {
      wepy.showLoading({
        title: '数据加载中',
        mask: true
      })
      const param = {
        signature: this.user_signature,
        code: this.code,
        rawData: this.user_rawData,
        nickname: this.user_info.nickName,
        avatarurl: this.user_info.avatarUrl,
        iv: this.run_data_param.iv,
        encryptedData: this.run_data_param.encryptedData
      }
      wepy.request({
        url: service.wxStepDecrypt,
        method: 'GET',
        data: param,
        header: { 'Content-Type': 'application/json' }
      }).then((res) => {
        wepy.hideLoading()
        console.log('REQ_wxStepDecrypt res:', res)
        if (res.data.code === '200' || res.data.code === 200) {
          this.open_id = res.data.result.open_id
          this.handleRunData(res.data.result)
        } else {
          wepy.showModal({
            content: '获取步数失败',
            showCancel: false
          })
        }
      }).catch(err => {
        wepy.hideLoading()
        console.log(err)
      })
    }
    getTotalStepIndex (step) {
      const curStep = Math.floor(step / 1000)
      let stepIndex
      if (curStep < stepStandard[0]) {
        return 0
      }
      if (curStep >= stepStandard[stepStandard.length - 1]) {
        return 23
      }
      stepStandard.forEach((val, index) => {
        if (val > curStep && !stepIndex) {
          stepIndex = index
        }
      })
      return stepIndex
    }
    handleRunData (resdata) {
      this.today_step = resdata.todayStep
      this.total_step = resdata.total_step
      this.is_signin = resdata.signIn // 是否已经签到过
      this.user_info.score = resdata.integral
      this.medal_count = resdata.medalCount
      this.bread_count = resdata.bread_count
      this.finish_red_pack = resdata.money.map((val) => {
        return val / 1000
      })
      console.log('已领取红包档位: ', this.finish_red_pack)
      // 处理步数
      const curIndex = this.getTotalStepIndex(this.total_step)
      console.log('curIndex: ', curIndex)
      if (curIndex > 0) {
        stepStandard.forEach((val, index) => {
          if (index < curIndex) {
            this.finish_step[`${val}k`].km = `${val}k`
          }
        })
        // 改变国家显示的位置
        this.swiper_info.current_index = curIndex - 1
      }
      // 现实medal弹窗
      if (this.total_step / 1000 >= stepStandard[0]) {
        this.medal_info.km = `${stepStandard[curIndex - 1]}k`
        this.show_medal = true
      }
      // 判断红包显示
      for (let i = 0; i < curIndex; i++) {
        console.log('openedStep: ', stepStandard[i])
        if (redStandard.indexOf(stepStandard[i]) !== -1) { // 判断 有红包
          if (this.finish_red_pack.indexOf(stepStandard[i]) === -1) {
            this.finish_step[`${stepStandard[i]}k`].have_redpack_open = true
          }
        }
      }
      this.$apply()
    }
    requestRedpack () {
      wepy.showLoading({
        title: '正在打开红包',
        mask: true
      })
      wepy.request({
        url: service.wxSendRed,
        method: 'POST',
        data: {
          open_id: this.open_id,
          nickname: this.user_info.nickName,
          step: stepStandard[this.current_redpack_nation_index] * 1000
        },
        header: { 'Content-Type': 'application/x-www-form-urlencoded' }
      }).then((res) => {
        wepy.hideLoading()
        console.log('REQ_wxSendRed res: ', res)
        if (res.statusCode === 200) {
          this.show_redpack_open = false
          this.show_redpack_success = true
          this.can_open_redpack = true
          this.red_num = res.data.result
          // 重置所领取的国家上的红包按钮
          if (this.finish_step[`${stepStandard[this.current_redpack_nation_index]}k`]) {
            this.finish_step[`${stepStandard[this.current_redpack_nation_index]}k`].have_redpack_open = false
          }
          this.$apply()
        } else {
          wepy.showModal({
            content: res.data.message,
            showCancel: false
          })
        }
      })
    }
    previewErcode (e) {
      wepy.previewImage({
        urls: [this.$parent.globalData.ercode_img]
      })
    }
    getUserSetting () {
      wepy.getSetting().then((res) => {
        console.log(res)
        if (res.authSetting['scope.userInfo']) {
          this.scope_userinfo = true
          console.log('scope.userInfo/true')
          wepy.getUserInfo().then((res) => {
            console.log(res)
            this.user_info = res.userInfo
            this.user_info.score = 0
            this.user_rawData = res.rawData
            this.user_signature = res.signature
            this.show_auth_userinfo = false
            if (!this.run_data_param.encryptedData || !this.run_data_param.iv) {
              wepy.showModal({
                content: '您xxxx点击了拒绝授权，无法使用此功能。请删除小程序重新进入。',
                showCancel: false
              })
              wepy.hideLoading()
              return
            }
            this.requestRunData()
            this.$apply()
          })
        } else {
          wepy.hideLoading()
          this.scope_userinfo = false
          console.log('scope.userInfo/false')
          this.show_auth_userinfo = true
          this.$apply()
        }
      }).catch((err) => {
        console.log(err)
        wepy.hideLoading()
        wepy.showModal({
          content: '获取信息失败',
          showCancel: false
        })
      })
    }
    onShareAppMessage (res) {
      return {
        title: '宾堡环球健康跑',
        path: '/pages/index',
        imageUrl: 'https://bimbochinaclub.ysmine.com/Public/2018/07/common/shareimg.jpg'
      }
    }
    onShow () {
      this.iphonex_class = this.$parent.globalData.iphonex_class
    }
    onLoad () {
      wepy.getSystemInfo().then((data) => {
        console.log('system_info: ', data)
        console.log('屏幕内容高度: ', data.windowHeight)
        console.log('屏幕内容宽度: ', data.windowWidth)
        if (data.windowHeight / data.windowWidth > 1.75) {
          if (data.windowHeight > 720) {
            this.$parent.globalData.iphonex_class = 'iphonex'
            this.iphonex_class = 'iphonex'
            this.$apply()
          } else if (data.windowHeight > 630) {
            this.$parent.globalData.iphonex_class = 'vivo'
            this.iphonex_class = 'vivo'
          }
        }
      })
      wepy.showLoading({
        title: '数据加载中',
        mask: true
      })
      wepy.login().then((res) => {
        console.log(res)
        this.code = res.code
      }).then((res) => {
        this.getUserRun()
      })

      // 判断带红包的国家
      stepStandard.forEach((val, index) => {
        this.finish_step[`${val}k`] = {}
        if (redStandard.indexOf(val) !== -1) {
          this.finish_step[`${val}k`].red = true
        }
      })
    }
  }
</script>
