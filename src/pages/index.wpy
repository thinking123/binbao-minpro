    <view class="footer">
      <view class="foot_item medal">
        <image src="../images/index/foot_medal.png"/>
        <view class="count_img_wrap">
          <image class="bj" src="../images/index/medal_count_img_bj.png"/>
          <image class="count {{medal_count < 10 ? 'one': ''}}" src="{{medal_count_img}}"/>
        </view>
      </view>
      <view class="foot_item path">
        <view class="path_item">公益勋章:累积步数点亮勋章</view>
        <view class="path_item bgwhite">今日步数：{{today_step}}步／总步数：{{total_step}}步</view>
        <view class="play_desc" @tap="togglePlayDesc">玩法说明</view>
      </view>
      <view class="foot_item bread">
        <image src="../images/index/foot_bread.png" @tap="jumpCharity"/>
        <view class="count_img_wrap">
          <image class="bj" src="../images/index/bread_count_img_bj.png"/>
          <image class="count {{medal_count < 10 ? 'one': ''}}" src="{{bread_count_img}}"/>
        </view>
        <text class="bread_tip">点击面包片了解公益详情</text>
      </view>
